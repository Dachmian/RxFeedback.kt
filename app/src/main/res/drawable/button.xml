<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused and not pressed -->
    <item android:state_focused="true" android:state_pressed="false" android:color="@color/buttonNormal" />

    <!-- Focused and pressed -->
    <item android:state_focused="true" android:state_pressed="true" android:color="@color/buttonPressed" />

    <!-- Unfocused and pressed -->
    <item android:state_focused="false" android:state_pressed="true" android:color="@color/buttonPressed" />

    <!-- Default color -->
    <item android:color="@color/buttonNormal" />

</selector>